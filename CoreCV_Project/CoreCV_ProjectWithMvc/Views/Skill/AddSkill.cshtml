@using CoreCV_Project.EntityLayer.Concrete
@model Skill
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Listesi Tablosu</h3>
</div>
<br />
<form class="form-group" asp-action="AddSkill" asp-controller="Skill" method="post">
    <label asp-for="Title" >Yetenek Adı:</label> <br />
    <input asp-for="Title"  class="form-control"/> <br />
    <label asp-for="Value">Yetenek Oranı:</label> <br />
    <input asp-for="Value" class="form-control" /> <br /><br />
    <button type="submit" class="btn btn-success">Ekle</button>
</form>