@using CoreCV_Project.EntityLayer.Concrete
@model About
@{
    ViewData["Title"] = "EditAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Hakkımda Düzenleme Sayfası</h3>
</div>
@using (Html.BeginForm("EditAbout", "About", FormMethod.Post))
{
    <br />
    @Html.HiddenFor(x => x.AboutId)
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Title, new { @class="form-control"})
    @Html.ValidationMessageFor(x => x.Title)
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Description, 10,2, new { @class="form-control"})
    @Html.ValidationMessageFor(x => x.Description)
    <br />
    @Html.Label("Yaş")
    @Html.TextBoxFor(x => x.Age, new { @class="form-control"})
    @Html.ValidationMessageFor(x => x.Age)
    <br />
     @Html.Label("Mail")
    @Html.TextBoxFor(x => x.Mail, new { @class="form-control"})
    @Html.ValidationMessageFor(x => x.Mail)
    <br />
     @Html.Label("Telefon")
    @Html.TextBoxFor(x => x.Phone, new { @class="form-control"})
    @Html.ValidationMessageFor(x => x.Phone)
    <br />
     @Html.Label("Adres")
    @Html.TextBoxFor(x => x.Address, new { @class="form-control"})
    @Html.ValidationMessageFor(x => x.Address)
    <br />
     @Html.Label("Resim Yolu")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class="form-control"})
    @Html.ValidationMessageFor(x => x.ImageUrl)
    <br />   
    <button class="btn btn-info">Güncelle</button>

}

