@using CoreCV_Project.EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Listesi Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">Id</th>
                <th scope="col" class="sort" data-sort="budget">Şirket</th>
                <th scope="col" class="sort" data-sort="status">Tarih</th>
                <th scope="col">Sil</th>
                <th scope="col">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in @Model)
            {
                <tr>
                    <th>@item.ExperienceId</th>
                    <th class="budget">
                        @item.Name
                    </th>
                    <td>
                       @item.Date
                    </td>
                    <td><a href= "/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-danger">Sil</a></td>
                    <td><a href= "/Experience/EditExperience/@item.ExperienceId" class="btn btn-info">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Experience/AddExperience/" class="btn btn-success">Yeni Deneyim Ekle</a>
</div>


